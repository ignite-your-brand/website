<div class="container">
    <div class="row mt-10 justify-content-center">
        <div class="col col-lg-8 text-center">
            <h3>{{model.content.title}}</h3>
            <hr class="hr-orange center">
            {{markdown-to-html model.content.introductionText}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row mt-5">
        {{#each model.projects as |project|}}
            <div class="col-12 col-sm-6 col-lg-4 mb-4 text-center">
                {{#link-to 'project' project.slug }}
                    <img class="img-fluid" src="{{ project.portfolioImage.file.url }}" alt="{{ project.name }}">
                {{/link-to}}
            </div>
        {{/each}}
    </div>
</div>

<div class="container-fluid">
    <div class="row mt-10">
        <div class="chat-container d-flex flex-column align-items-center justify-content-center" style="height: 501px;">
            <h4 class="text-center">Ready to learn what we can do for you?</h4>
            {{show-chat}}
        </div>

    </div>
</div>